allFiles=($@)
function checkFile () {
        unbundle=1
        if [ ${#allFiles[@]} == 0 ]
        then
                unbundle=0
                return
        fi
        for file in ${allFiles[@]}
        do
                if [ "$file" ==  "$1" ]
                then
                        echo "myfile is $file"
                        return
                fi
        done 
}
# To unbundle, bash this file, To unbundle selectively, Pelase  supply them as arguments. Otherwise everything  will be unbundled
checkFile "file1"
if [ "$unbundle" -eq 0 ]
then
echo file1 1>&2
cat >file1 <<'End of file1'
This is a file.
It contains two lines.
End of file1
fi
checkFile "file2"
if [ "$unbundle" -eq 0 ]
then
echo file2 1>&2
cat >file2 <<'End of file2'
This is another file.
It contains
three lines.
End of file2
fi
